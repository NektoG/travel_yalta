<!DOCTYPE html>
<html lang="ru">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="content-language" content="ru">
		<meta name="description" content="<%= introduction[0]['Description'] %>">
		<meta name="keywords" content="<%= real_keywords %>">

		<meta name="application-name" content="<%= real_name_project %>">
		<meta name="generator" content="Node JS">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title><% for(var i=0; i < name_cite.length; i++) { %><%if(name_cite[i]['Cite'] === 'Book_of_Reviews'){%><%= name_cite[i]['Name'] %> <% } %><% } %><%= real_name_project %></title>
		<link rel="shortcut icon" href="<%= image_favicon %><%= favicon[0]['Link'] %>">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<link rel="stylesheet" href="Source/default/css/resource.css">
		<link rel="stylesheet" href="Source/Elements/Header/css/resource.css">
		<link rel="stylesheet" href="Source/Book_of_reviews/css/resource.css">
		<link rel="stylesheet" href="Source/Elements/Footer/css/resource.css">
	</head>
	<body>
		<%- include ('Elements/header.ejs'); %>
	  <div id="Main_Base">
	    <div class="Base g-0">
			<%if(introduction[0]['Topic'] != '' && introduction[0]['Description'] != ''){%>
	    	<section id="Introduction">
					<div class="anim_active">
						<%if(introduction[0]['Topic'] != ''){%>
						<h3><%= introduction[0]['Topic'] %></h3>
						<%}%>
						<%if(introduction[0]['Description'] != ''){%>
						<h5><%= introduction[0]['Description'] %></h5>
						<%}%>
					</div>
	    	</section>
				<% } %>
				<% if(card_topic != null && card_topic != undefined && card != null && card != undefined){ %>
				<% for(var i=(card_topic.length-1); i >= 0; i--) { %>
	    	<section class="row _anim_elements kek">
	    		<hr>
	    		<section class="topical">
	    			<div>
	    				<span class="place"><%= card_topic[i]['C_1'] %> <% if(card_topic[i]['type_service'] < 5){ %><a href="<%= type_link[i] %><%= card_topic[i]['num_card'] %>"><%= card_topic[i]['Link_Text'] %></a><% } else { %><%= card_topic[i]['Link_Text'] %><% } %></span>
	    				<span class="date"><%= card_topic[i]['C_2'] %></span>
	    			</div>
	    		</section>
	    		<hr>
					<section class="col-md-6 col-12">
					<% for(var k=(card.length-1); k >= 0; k--) { %>
					<% if((card[k]['num_topic'] === card_topic[i]['ID']) && (((k+1) % 2) > 0)) { %>
	    			<figure class="_anim_elements kek" id="<%= card[k]['ID']%>">
					  <div>
					  	<blockquote>
						    <%= card[k]['Word'] %>
						  </blockquote>
						  <figcaption>
						    &mdash; <% if(card[k]['Link'] != '' && card[k]['Link'] != 'null' && card[k]['Link'] != '0'){ %><a href="<%= card[k]['Link'] %>"><%= card[k]['Autor'] %></a><% } else { %><%= card[k]['Autor'] %><% } %>
						  </figcaption>
					  </div>
					</figure>
				<% } } %>
				</section>
				<section  class="col-md-6 col-12">
				<% for(var k=(card.length-1); k >= 0; k--) { %>
				<% if((card[k]['num_topic'] === card_topic[i]['ID']) && (((k+1) % 2) === 0)) { %>
						<figure class="_anim_elements kek" id="<%= card[k]['ID']%>">
						  <div>
						  	<blockquote>
							    <%= card[k]['Word'] %>
							  </blockquote>
							  <figcaption>
							    &mdash; <% if(card[k]['Link'] != '' && card[k]['Link'] != 'null' && card[k]['Link'] != '0'){ %><a href="<%= card[k]['Link'] %>"><%= card[k]['Autor'] %></a><% } else { %><%= card[k]['Autor'] %><% } %>
							  </figcaption>
						  </div>
						</figure>
				<%} }%>
				</section>
	    </section>
			<% } } %>
	  </div>
	</div>
	<%- include ('Elements/footer.ejs'); %>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
	<script src="Source/default/js/for_anim_move_up.js"></script>
	</body>
</html>
