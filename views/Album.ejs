<!DOCTYPE html>
<html lang="ru">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="content-language" content="ru">
		<meta name="description" content="<%= introduction[0]['Description'] %>">
		<meta name="keywords" content="<%= real_keywords %>">

		<meta name="application-name" content="<%= real_name_project %>">
		<meta name="generator" content="Node JS">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title><% for(var i=0; i < name_cite.length; i++) { %><%if(name_cite[i]['Cite'] === 'Album'){%><%= name_cite[i]['Name'] %> <% } %><% } %><%= real_name_project %></title>
		<link rel="shortcut icon" href="<%= image_favicon %><%= favicon[0]['Link'] %>">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<link rel="stylesheet" href="https://unpkg.com/swiper@8/swiper-bundle.min.css"/>
		<link rel="stylesheet" href="Source/default/css/resource.css">
		<link rel="stylesheet" href="Source/Elements/Header/css/resource.css">
		<link rel="stylesheet" href="Source/Album/css/resource.css">
		<link rel="stylesheet" href="Source/Elements/Footer/css/resource.css">
	</head>
	<body>
		<%- include ('Elements/header.ejs'); %>
	  <div id="Main_Base">
	    <div class="Base g-0">
				<%if(introduction[0]['Topic'] != '' && introduction[0]['Description'] != ''){%>
	    	<section id="Introduction">
					<div class="anim_active">
						<%if(introduction[0]['Topic'] != ''){%>
						<h3><%= introduction[0]['Topic'] %></h3>
						<%}%>
						<%if(introduction[0]['Description'] != ''){%>
						<h5><%= introduction[0]['Description'] %></h5>
						<%}%>
					</div>
	    	</section>
				<% } %>
				<% if(card_topic != null && card_topic != undefined && card != null && card != undefined){ %>
				<% let id = 0; %>
				<% let id_k = 0; %>
				<% for(var i = (card_topic.length-1); i >= 0; i--) { %>
				<% id = 0; %>
	    	<section class="_anim_elements kek">
	    		<h3><%= card_topic[i]['Data'] %></h3>
	    		<section class="Slider row section _anim_elements kek">
		    		<div class="swiper mySwiper">
				      <div class="swiper-wrapper">
								<% id = 0; %>
								<% for(var k=(card.length-1-id_k); k >= 0 ; k--) { %>
								<% if(card_topic[i]['ID'] === card[k]['num_topic'] && id < 5){ %>
									<% id_k++;%>
				        <div class="swiper-slide _anim_elements kek">
				          <div class="shower-slide">
				          	<div class="card text-white">
										  <img src="<% if(type_img[k] === 0){ %><%= img_link; %><%= (i+1); %>/<% } %><%= card[k]['Img'] %>" class="card-img" alt="">
										</div>
				          </div>
				        </div>
							<% id = id + 1 %>
							<% } } %>
				      </div>
				      <div class="swiper-pagination"></div>
				    </div>
		    	</section>
		    	<section class="Content row _anim_elements kek">
						<% for(var k=(card.length-1-id_k); k >= 0 ; k--) { %>
						<% if(card_topic[i]['ID'] === card[k]['num_topic'] && id >= 5){ %>
							<% id_k++;%>
		    		<div class="col-lg-4 col-6 shower _anim_elements kek">
		    			<img src="<% if(type_img[k] === 0){ %><%= img_link; %><%= (i+1); %>/<% } %><%= card[k]['Img'] %>" alt="">
		    		</div>
						<% id = id + 1 %>
						<% } } %>
		    	</section>
	    	</section>
				<% } } %>
	    	<hr>
	    </div>
	  </div>
		<% if(card_topic.length > 0){ %>
	  <div id="container_Zoom">
	  	<div id="Zoom" class="invis">
	 		<button id="cancellation_window" type="button" class="btn-close"><span>&#215;</span></button>
		  	<img id="Zoom_Img" src="">
		 </div>
	  </div>
		<% } %>

	<%- include ('Elements/footer.ejs'); %>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
	<script src="https://unpkg.com/swiper@8/swiper-bundle.min.js"></script>
	<script src="Source/Album/js/for_slider.js"></script>
	<% if(card_topic.length > 0){ %>
  <script src="Source/Album/js/for_zoom.js"></script>
	<% } %>
	<script src="Source/default/js/for_anim_move_up.js"></script>
	</body>
</html>
