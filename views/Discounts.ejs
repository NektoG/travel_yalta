<!DOCTYPE html>
<html lang="ru">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="content-language" content="ru">
		<meta name="description" content="<%= introduction[0]['Description'] %>">
		<meta name="keywords" content="<%= real_keywords %>">

		<meta name="application-name" content="<%= real_name_project %>">
		<meta name="generator" content="Node JS">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title><% for(var i=0; i < name_cite.length; i++) { %><%if(name_cite[i]['Cite'] === 'Discounts'){%><%= name_cite[i]['Name'] %> <% } %><% } %><%= real_name_project %></title>
		<link rel="shortcut icon" href="<%= image_favicon %><%= favicon[0]['Link'] %>">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<link rel="stylesheet" href="https://unpkg.com/swiper@8/swiper-bundle.min.css"/>
		<link rel="stylesheet" href="Source/default/css/resource.css">
		<link rel="stylesheet" href="Source/Elements/Header/css/resource.css">
		<link rel="stylesheet" href="Source/Discounts/css/resource.css">
		<link rel="stylesheet" href="Source/Elements/Footer/css/resource.css">
	</head>
	<body>
		<%- include ('Elements/header.ejs'); %>
	  <div id="Main_Base">
	    <div class="Base g-0">
				<%if(introduction[0]['Topic'] != '' && introduction[0]['Description'] != ''){%>
	    	<section id="Introduction">
					<div class="anim_active">
						<%if(introduction[0]['Topic'] != ''){%>
						<h3><%= introduction[0]['Topic'] %></h3>
						<%}%>
						<%if(introduction[0]['Description'] != ''){%>
						<h5><%= introduction[0]['Description'] %></h5>
						<%}%>
					</div>
	    	</section>
				<% } %>
				<% if(discount != null && discount != undefined && discounts_info != null && discounts_info != undefined){ %>
	    	<section class="row _anim_elements kek">
					<% for(var i = (discount.length-1); i >= 0 ; i--) { %>
						<div class="col-md-6 col-12 _anim_elements kek py-3">
							<a href="<%= discount_link[i] %>">
								<div class="card bg-dark text-white">
								<img src="<% if(discounts_type_img[i] === 0){ %><%= discount_link_img[i] %>/<% } %><%= discounts_info[i] %>" class="card-img" alt="Photo">
								<div class="card-img-overlay">
									<h5 class="card-title"><%= discount[i]['Topic'] %></h5>
									<p class="card-text"><%= discount[i]['Desc_2'] %></p>
									<p class="card-text"><%= discount[i]['Desc_3'] %></p>
								</div>
							</div>
							</a>
						</div>
					<% } %>
					<div class="col-md-6 col-12 _anim_elements kek py-3">
						<div class="card bg-dark text-white">
							<img src="<%= _default[0]['Img'] %>" class="card-img" alt="Photo">
							<div class="card-img-overlay">
								<h5 class="card-title"><%= _default[0]['Topic'] %></h5>
								<p class="card-text"><%= _default[0]['Description'] %></p>
							</div>
						</div>
					</div>
	    	</section>
				<% } %>
	    </div>
	  </div>
	<%- include ('Elements/footer.ejs'); %>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
	<script src="https://unpkg.com/swiper@8/swiper-bundle.min.js"></script>
	<script src="Source/default/js/for_anim_move_up.js"></script>
	</body>
</html>
