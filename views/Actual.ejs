<!DOCTYPE html>
<html lang="ru">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="content-language" content="ru">
		<meta name="description" content="<%= introduction[0]['Description'] %>">
		<meta name="keywords" content="<%= real_keywords %>">

		<meta name="application-name" content="<%= real_name_project %>">
		<meta name="generator" content="Node JS">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title><% for(var i=0; i < name_cite.length; i++) { %><%if(name_cite[i]['Cite'] === 'Actual'){%><%= name_cite[i]['Name'] %>: <%= city[(item-1)]['Topic']; %> <% } %><% } %><%= real_name_project %></title>
		<link rel="shortcut icon" href="<%= image_favicon %><%= favicon[0]['Link'] %>">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<link rel="stylesheet" href="https://unpkg.com/swiper@8/swiper-bundle.min.css"/>
		<link rel="stylesheet" href="../Source/default/css/resource.css">
		<link rel="stylesheet" href="../Source/Elements/Header/css/resource.css">
		<link rel="stylesheet" href="../Source/Actual/css/resource.css">
		<link rel="stylesheet" href="../Source/Elements/Footer/css/resource.css">
	</head>
	<body>
		<%- include ('Elements/header.ejs'); %>
	  <div id="Main_Base">
	    <div class="Base g-0">
			<%if(introduction[0]['Topic'] != '' && introduction[0]['Description'] != ''){%>
	    	<section id="Introduction">
					<div class="anim_active">
						<%if(introduction[0]['Topic'] != ''){%>
						<h3><%= introduction[0]['Topic'] %></h3>
						<%}%>
						<%if(introduction[0]['Description'] != ''){%>
						<h5><%= introduction[0]['Description'] %></h5>
						<%}%>
					</div>
	    	</section>
				<% } %>
				<% if(city != null || city != undefined){%>
				<section id="City">
					<h2><%= city[(item-1)]['Topic']; %></h2>
				</section>
				<% } %>
				<% if(hotels != null && hotels != undefined){%>
	    	<section id="Hotels" class="row section _anim_elements kek">
	    		<h3><%= hot[0]['Main_Topic']; %></h3>
	    		<div class="swiper mySwiper">
			      <div class="swiper-wrapper">
							<% for(let i = 0; i < hotels.length; i++){ %>
								<% if(hotels[i]['num_topic'] === item) {%>
					        <div class="swiper-slide">
					          <div href="" class="shower" nik = "<%= i %>">
					          	<div class="card bg-dark text-white">
											  <img src="<% if(type_hotels_img[i] === 0){ %><%= img_link; %>Hotels/<% } %><%= hotels[i]['Img'] %>" class="card-img" alt="...">
											  <div class="card-img-overlay">
											    <h5 class="card-title"><%= hotels[i]['Topic'] %></h5>
													<div class="rating-result">
														<% for(var k=0; k < 5; k++) { %>
															<%if(k < hotels[i]['Rating']){%>
												   			<span class="active"></span>
															<%} else {%>
												   			<span></span>
													 		<%}%>
													 	<%}%>
													</div>
											  </div>
											</div>
					          </div>
					        </div>
								<% } %>
							<% } %>
			      </div>
			      <div class="swiper-pagination"></div>
			    </div>
			    <div class="info_post">
						<% for(let i = 0; i < hotels.length; i++){ %>
							<% if(hotels[i]['num_topic'] === item) {%>
					    	<section nik="<%= i %>" class="invis">
					    		<div>
										<p><%= hotels[i]['Description']; %></p>
									</div>

					    		<div><a class="btn btn-primary" target="_blank" href="<%= hotels[i]['Link']; %>" role="button">К источнику</a></div>
					    	</section>
							<% } %>
						<% } %>
			    </div>
	    	</section>
				<% } %>
				<% if(restaurants != null && restaurants != undefined){%>
	    	<section id="Cafe&Restaurant" class="row section _anim_elements kek">
	    		<h3><%= hot[1]['Main_Topic']; %></h3>
	    		<div class="swiper mySwiper">
			      <div class="swiper-wrapper">
							<% for(let i = 0; i < restaurants.length; i++){ %>
								<% if(restaurants[i]['num_topic'] === item) {%>
					        <div class="swiper-slide">
					          <div href="" class="shower" nik = "<%= i %>">
					          	<div class="card bg-dark text-white">
											  <img src="<% if(type_restaurants_img[i] === 0){ %><%= img_link; %>Restaurants/<% } %><%= restaurants[i]['Img'] %>" class="card-img" alt="...">
											  <div class="card-img-overlay">
											    <h5 class="card-title"><%= restaurants[i]['Topic'] %></h5>
													<div class="rating-result">
														<% for(var k=0; k < 5; k++) { %>
															<%if(k < restaurants[i]['Rating']){%>
												   			<span class="active"></span>
															<%} else {%>
												   			<span></span>
													 		<%}%>
													 	<%}%>
													</div>
											  </div>
											</div>
					          </div>
					        </div>
								<% } %>
							<% } %>
			      </div>
			      <div class="swiper-pagination"></div>
			    </div>

			    <div class="info_post">
						<% for(let i = 0; i < restaurants.length; i++){ %>
							<% if(restaurants[i]['num_topic'] === item){%>
					    	<section nik="<%= i %>" class="invis">
					    		<div>
										<p><%= restaurants[i]['Description']; %></p>
									</div>

					    		<div><a class="btn btn-primary" target="_blank" href="<%= restaurants[i]['Link']; %>" role="button">К источнику</a></div>
					    	</section>
							<% } %>
						<% } %>
			    </div>
	    	</section>
				<% } %>
				<% if(restaurants != null && restaurants != undefined){%>
	    	<section id="Attractions" class="row section _anim_elements kek">
	    		<h3><%= hot[2]['Main_Topic']; %></h3>
	    		<div class="swiper mySwiper">
			      <div class="swiper-wrapper">
							<% for(let i = 0; i < attractions.length; i++){ %>
								<% if(attractions[i]['num_topic'] === item) {%>
					        <div class="swiper-slide">
					          <div href="" class="shower" nik = "<%= i %>">
					          	<div class="card bg-dark text-white">
											  <img src="<% if(type_attractions_img[i] === 0){ %><%= img_link; %>Attractions/<% } %><%= attractions[i]['Img'] %>" class="card-img" alt="...">
											  <div class="card-img-overlay">
											    <h5 class="card-title"><%= attractions[i]['Topic'] %></h5>
													<div class="rating-result">
														<% for(var k=0; k < 5; k++) { %>
															<%if(k < attractions[i]['Rating']){%>
												   			<span class="active"></span>
															<%} else {%>
												   			<span></span>
													 		<%}%>
													 	<%}%>
													</div>
											  </div>
											</div>
					          </div>
					        </div>
								<% } %>
							<% } %>
			      </div>
			      <div class="swiper-pagination"></div>
			    </div>

			    <div class="info_post">
						<% for(let i = 0; i < attractions.length; i++){ %>
							<% if(attractions[i]['num_topic'] === item) {%>
					    	<section nik="<%= i %>" class="invis">
					    		<div>
										<p><%= attractions[i]['Description']; %></p>
									</div>

					    		<div><a class="btn btn-primary" target="_blank" href="<%= attractions[i]['Link']; %>" role="button">К источнику</a></div>
					    	</section>
							<% } %>
						<% } %>
			    </div>
	    	</section>
				<% } %>
	    </div>
	  </div>
	<%- include ('Elements/footer.ejs'); %>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
	<script src="https://unpkg.com/swiper@8/swiper-bundle.min.js"></script>
	<script src="../Source/Actual/js/for_slider.js"></script>
	<script src="../Source/Actual/js/function_click.js"></script>
	<script src="../Source/default/js/for_anim_move_up.js"></script>
	</body>
</html>
